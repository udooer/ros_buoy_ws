<launch>
	<!-- Setup file -->
	<arg name="bag" default="false"/>

    <!-- Pinger1 -->
    <node name="get_sound_data_for2i2" pkg="get_sound_data" type="get_sound_data_for2i2" output="screen" clear_params="true" required="true" args="num=1">
    	<rosparam command="load" file="$(find get_sound_data)/config/recorder_params_for2i2.yaml" />
    </node>
	<node name="rosbag_hydrophone_data" pkg="rosbag" type="record" args="record -o $(find get_sound_data)/bagfiles/hydrophone /hydrophone_data" if="$(arg bag)"/>

</launch>
